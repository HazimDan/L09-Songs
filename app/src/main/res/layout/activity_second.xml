<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spotifylayout"
    android:orientation="vertical"
    android:paddingLeft="35dp"
    android:paddingTop="100dp"
    android:paddingBottom="265dp"
    android:paddingRight="40dp"
    tools:context="sg.edu.rp.c346.id22012867.NDPSongs.SecondActivity">

    <Button
        android:id="@+id/btn5Stars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="filterListView"
        android:text="show all songs with 5 stars" />

    <Spinner
        android:id="@+id/spinnerYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/spnSongs"/>

    <ListView
        android:id="@+id/lvSongs"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
</LinearLayout>